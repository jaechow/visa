</con:interface><con:testSuite id="4fd55868-8c60-434c-b734-695ad96a3d3f" name="helloworld"><con:settings/><con:runType>SEQUENTIAL</con:runType><con:testCase id="107df473-33ea-4e48-8c80-45fa542d2e5e" failOnError="true" failTestCaseOnErrors="true" keepSession="false" maxResults="0" name="happyPath" searchProperties="true"><con:settings/><con:testStep type="groovy" name="x-pay-token: helloworld" id="2cfb7e09-ff08-49ce-ae3a-43c6c5b9ec0b"><con:settings/><con:config><script>import javax.crypto.Mac;
import javax.crypto.spec.SecretKeySpec;
def hmac(String secretKey, String data) {
 Mac mac = Mac.getInstance("HmacSHA256")
 SecretKeySpec secretKeySpec = new SecretKeySpec(secretKey.getBytes(), "HmacSHA256")
 mac.init(secretKeySpec)
 byte[] digest = mac.doFinal(data.getBytes())
 return digest
}                       
def APIKey = testRunner.testCase.getPropertyValue("apiKey")
def sharedSecret = testRunner.testCase.getPropertyValue("sharedSecret")
def URI = "helloworld"
// take note: apikey is all lowercase ("K" is NOT caps, important!)
def QS = "apikey="+APIKey
def timeStampUTC = String.valueOf(System.currentTimeMillis().intdiv(1000L))
def payload = ""
def HMACDigest = hmac(sharedSecret, timeStampUTC + URI + QS + payload)
def encodedDigest = HMACDigest.encodeHex().toString()
def XPayToken = "xv2:"+ timeStampUTC + ":" + encodedDigest
testRunner.testCase.setPropertyValue("x-pay-token", XPayToken)
log.info(XPayToken)</script></con:config></con:testStep><con:testStep type="restrequest" name="helloworld" id="d01d90da-963e-4323-bee0-c02e64ca3df6"><con:settings/><con:config service="https://sandbox.api.visa.com" resourcePath="/vdp/helloworld" methodName="Helloworld 1" xsi:type="con:RestRequestStep" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"><con:restRequest name="helloworld" id="7128a2da-25b5-40d2-b1a7-9f1c6037e43a" mediaType="application/json"><con:settings><con:setting id="com.eviware.soapui.impl.wsdl.WsdlRequest@request-headers">&lt;xml-fragment xmlns:con="http://eviware.com/soapui/config">
